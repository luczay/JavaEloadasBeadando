<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.beadando.eloadasbeadandoui.Feladat1eController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Pizza Selection -->
    <Label text="Pizza:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="pizzaDropdown" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <Button text="Töröl" onAction="#onSubmitClick" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Főmenü" onAction="#onBackToMenuClick" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</GridPane>
